<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="50"
                android:padding="15dp"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:src="@drawable/educacion"
                    />

                <TextView
                    android:id="@+id/tvEducacion"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:text="EducaciÃ³n"/>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="50"
                android:padding="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:src="@drawable/luz"
                    />

                <TextView
                    android:id="@+id/tvLuz"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:text="Luz"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="50"
                android:padding="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:src="@drawable/agua"
                    />

                <TextView
                    android:id="@+id/tvAgua"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:text="Agua"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="50"
                android:padding="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:src="@drawable/wifi"
                    />

                <TextView
                    android:id="@+id/tvInternet"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:text="Internet"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="50"
                android:padding="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:src="@drawable/supermercado"
                    />

                <TextView
                    android:id="@+id/tvSupermercado"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:text="Supermercado"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="50"
                android:padding="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:src="@drawable/otro"
                    />

                <TextView
                    android:id="@+id/tvOtro"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:text="Otro"/>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>