<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >





        <LinearLayout
            android:theme="@style/Theme.IMoney.IMoney_ingresos"
            android:id="@+id/toplinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"

            android:background="#2ECC71"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="Cancelar"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor de los Ingresos"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:paddingLeft="9dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/"
                    android:textSize="30sp"
                    android:paddingLeft="9dp"

                    android:layout_marginLeft="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tvSaldo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="30sp"

                    android:layout_marginLeft="5dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_marginBottom="-20dp"
                android:layout_marginTop="20dp"

                app:layout_constraintTop_toBottomOf="@+id/toplinner"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:padding="20dp"


                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:weightSum="50">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="@color/gray"
                            android:src="@drawable/icons8_solicitud_de_dinero_24"
                            android:layout_weight="1"
                            />

                        <com.google.android.material.switchmaterial.SwitchMaterial

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="20dp"
                            android:layout_weight="49"
                            android:id="@+id/switchPrestamo"
                            android:text="Prestamo"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:weightSum="50">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="@color/gray"
                            android:src="@drawable/ic_baseline_calendar_today_24"
                            android:layout_weight="1"
                            />


                        <TextView
                            android:id="@+id/tvFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="49"
                            android:hint="Fecha"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            android:inputType="text"
                            android:paddingLeft="20dp"/>


                    </LinearLayout>
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:weightSum="50">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="@color/gray"
                            android:src="@drawable/icons8_l_piz_24"
                            android:layout_weight="1"
                            />

                        <EditText
                            android:id="@+id/tvDescripcion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Descripcion"
                            android:paddingLeft="20dp"
                            android:textColor="@color/gray"
                            android:backgroundTint="@android:color/transparent"
                            android:textSize="13sp"
                            android:layout_weight="49"
                           />
                    </LinearLayout>
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:id="@+id/containerBtnCategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="13dp"
                        android:clickable="true"
                        android:paddingBottom="13dp"
                        android:weightSum="50">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="@color/gray"
                            android:src="@drawable/icons8_etiqueta_de_precio_24"
                            android:layout_weight="1"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="48">
                            <com.google.android.material.button.MaterialButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                app:icon="@drawable/ic_candado"
                                android:id="@+id/buttonCategoria"
                                android:text="Otro"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:cornerRadius="20dp"
                                android:textSize="11sp"
                                app:iconTint="#2ECC71"
                                android:textColor="@color/black"
                                app:strokeColor="#2ECC71"
                                app:iconSize="25sp"


                                />
                        </LinearLayout>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_flecha_right"
                            app:tint="@color/gray"




                            />





                    </LinearLayout>
                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:id="@+id/containerPrestamos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="13dp"
                        android:clickable="true"
                        android:visibility="gone"
                        android:paddingBottom="13dp"
                        android:weightSum="50">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="@color/gray"
                            android:src="@drawable/ic_outline_bubble_chart_24"
                            android:layout_weight="1"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="39"
                            android:paddingLeft="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPersona"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Seleccione un prestamo"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvCategoria"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Prestamo"
                                android:textSize="11sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="9"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvMonto"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="S/0.00"
                                />


                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_flecha_right"

                            app:tint="@color/gray"
                            android:paddingLeft="20dp"


                            />








                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:layout_marginBottom="50dp"
                        android:gravity="bottom|center"
                        >
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGuardar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            app:cornerRadius="20dp"
                            android:backgroundTint="@color/green_normal"
                            android:textColor="@color/white"
                            android:text="Guardar"/>
                    </LinearLayout>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>










</androidx.constraintlayout.widget.ConstraintLayout>
